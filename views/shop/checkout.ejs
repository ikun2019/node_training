<%- include('../include/head.ejs') %>
  <link rel="stylesheet" href="/css/cart.css">
  </head>

  <body>
    <%- include('../include/navigation.ejs') %>
      <main>
        <ul class="cart__item-list">
          <% products.forEach(product=> { %>
            <li class="cart__item">
              <h1>
                <%= product.title %>
              </h1>
              <h2>
                Quantity :
                <%= product.cartItem.quantity %>
              </h2>
            </li>
            <% }) %>
        </ul>
        <div class="centered">
          <h2>
            Total : <%= totalSum %>
          </h2>
        </div>
      </main>
      <%- include('../include/end.ejs') %>